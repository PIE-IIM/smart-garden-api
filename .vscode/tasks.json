{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Create Migration",
            "type": "shell",
            "command": "make migrate",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Reset Database",
            "type": "shell",
            "command": "make reset-db",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Sync After Pull",
            "type": "shell",
            "command": "make sync",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Prisma Studio",
            "type": "shell",
            "command": "npx prisma studio",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Migration Status",
            "type": "shell",
            "command": "npx prisma migrate status",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}