generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String            @id @default(uuid())
  email           String            @unique
  password        String
  name            String?
  createdAt       DateTime          @default(now())
  level           String?
  comments        Comment[]
  GardenData      GardenData?
  gardenVegetable GardenVegetable[]
  Post            Post[]
  PostComment     PostComment[]
  PostLike        PostLike[]
  Task            Task[]
  Token           Token?
  topics          Topic[]
  Tutorial        Tutorial[]
  TutorialLike    TutorialLike[]
}

model Token {
  id        String   @id
  createdAt DateTime @default(now())
  expireAt  DateTime
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}

model GardenVegetable {
  id          String   @id @default(uuid())
  // vegetable   Vegetable @relation(fields: [vegetableId], references: [id])
  vegetableId String
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  tasks Task[]
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  category    String?
  plant       GardenVegetable?  @relation(fields: [plantId], references: [id])
  plantId     String?
  dueDate     DateTime?
  priority    TaskPriority @default(MEDIUM)
  reminder    Boolean      @default(false)
  
  completed   Boolean      @default(false) 

  createdAt   DateTime     @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model ForumTag {
  id        String     @id @default(uuid())
  name      String     @unique
  createdAt DateTime   @default(now())
  topics    TopicTag[]
}

model Topic {
  id        String     @id @default(uuid())
  title     String
  content   String
  viewCount Int        @default(0)
  createdAt DateTime   @default(now())
  authorId  String
  comments  Comment[]
  author    User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tags      TopicTag[]
}

model TopicTag {
  topicId String
  tagId   String
  tag     ForumTag @relation(fields: [tagId], references: [id], onDelete: Cascade)
  topic   Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@id([topicId, tagId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  topicId   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model GardenData {
  id       String @id
  name     String
  location String
  userId   String @unique
  User     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Post {
  id          String        @id
  content     String
  images      String[]
  authorId    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  User        User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  PostComment PostComment[]
  PostLike    PostLike[]

  @@index([authorId])
  @@index([createdAt])
}

model PostComment {
  id        String   @id
  content   String
  postId    String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  Post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([postId])
}

model PostLike {
  id        String   @id
  postId    String
  userId    String
  createdAt DateTime @default(now())
  Post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

model Tutorial {
  id            String           @id
  title         String
  description   String?
  type          TutorialType
  category      TutorialCategory
  videoUrl      String?
  videoDuration Int?
  thumbnail     String?
  content       String?
  images        String[]
  authorId      String
  viewCount     Int              @default(0)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime
  User          User             @relation(fields: [authorId], references: [id], onDelete: Cascade)
  TutorialLike  TutorialLike[]

  @@index([authorId])
  @@index([category])
  @@index([createdAt])
  @@index([type])
}

model TutorialLike {
  id         String   @id
  tutorialId String
  userId     String
  createdAt  DateTime @default(now())
  Tutorial   Tutorial @relation(fields: [tutorialId], references: [id], onDelete: Cascade)
  User       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tutorialId, userId])
  @@index([tutorialId])
  @@index([userId])
}

model sensor_readings {
  id            BigInt    @id @default(autoincrement())
  sensor_id     String    @db.Uuid
  value_numeric Float
  raw_value     Int?
  voltage       Float?
  recorded_at   DateTime? @db.Timestamptz(6)
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  sensors       sensors   @relation(fields: [sensor_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([sensor_id, created_at(sort: Desc)], map: "idx_readings_sensor_created")
  @@index([sensor_id, recorded_at(sort: Desc)], map: "idx_readings_sensor_recorded")
}

model sensors {
  id              String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String
  type            String
  unit            String            @default("%")
  is_active       Boolean           @default(true)
  write_token     String?           @unique
  created_at      DateTime          @default(now()) @db.Timestamptz(6)
  sensor_readings sensor_readings[]
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TutorialCategory {
  ASTUCES
  DIY
  TECHNIQUES
}

enum TutorialType {
  VIDEO
  ARTICLE
}