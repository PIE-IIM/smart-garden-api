generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())

  Token           Token?
  gardenVegetable GardenVegetable[]
  Task            Task[]
  topics          Topic[]
  comments        Comment[]
}

model Token {
  id        String   @id
  createdAt DateTime @default(now())
  expireAt  DateTime

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model GardenVegetable {
  id          String   @id @default(uuid())
  // vegetable   Vegetable @relation(fields: [vegetableId], references: [id])
  vegetableId String
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  category    String?
  plant       String?
  dueDate     DateTime?
  priority    TaskPriority @default(MEDIUM)
  reminder    Boolean      @default(false)
  createdAt   DateTime     @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model ForumTag {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  
  topics TopicTag[]
}

model Topic {
  id          String   @id @default(uuid())
  title       String
  content     String   @db.Text
  viewCount   Int      @default(0)
  createdAt   DateTime @default(now())
  
  // Relations
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
  
  tags     TopicTag[]
  comments Comment[]
}

model TopicTag {
  topic   Topic  @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId String
  
  tag   ForumTag @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId String
  
  @@id([topicId, tagId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  // Relations
  topic   Topic  @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId String
  
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
}