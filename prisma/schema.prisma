generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  level     String?
  createdAt DateTime @default(now())

  Token           Token?
  gardenVegetable GardenVegetable[]
  gardenData GardenData?
  Task            Task[]
  topics          Topic[]
  comments        Comment[]
  posts           Post[]            @relation("UserPosts")
  postLikes       PostLike[]        @relation("UserPostLikes")
  postComments    PostComment[]     @relation("UserPostComments")
  tutorials       Tutorial[]        @relation("UserTutorials")
  tutorialLikes   TutorialLike[]    @relation("UserTutorialLikes")
}

model Token {
  id        String   @id
  createdAt DateTime @default(now())
  expireAt  DateTime

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model GardenVegetable {
  id          String   @id @default(uuid())
  // vegetable   Vegetable @relation(fields: [vegetableId], references: [id])
  vegetableId String
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  tasks Task[]
}

model GardenData {
  id          String   @id @default(uuid())
  name String
  location String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  tasks Task[]
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  category    String?
  plant       GardenVegetable?  @relation(fields: [plantId], references: [id])
  plantId     String?
  gardenData      GardenData?  @relation(fields: [gardenDataId], references: [id])
  gardenDataId    String?
  dueDate     DateTime?
  priority    TaskPriority @default(MEDIUM)
  reminder    Boolean      @default(false)
  
  completed   Boolean      @default(false) 

  createdAt   DateTime     @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model ForumTag {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())

  topics TopicTag[]
}

model Topic {
  id        String   @id @default(uuid())
  title     String
  content   String   @db.Text
  viewCount Int      @default(0)
  createdAt DateTime @default(now())

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  tags     TopicTag[]
  comments Comment[]
}

model TopicTag {
  topic   Topic  @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId String

  tag   ForumTag @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId String

  @@id([topicId, tagId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String   @db.Text
  createdAt DateTime @default(now())

  topic   Topic  @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId String

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
}

model Post {
  id       String   @id @default(cuid())
  content  String   @db.Text
  images   String[]
  authorId String
  author   User     @relation("UserPosts", fields: [authorId], references: [id], onDelete: Cascade)

  likes    PostLike[]
  comments PostComment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([createdAt])
}

model PostLike {
  id     String @id @default(cuid())
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation("UserPostLikes", fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

model PostComment {
  id       String @id @default(cuid())
  content  String @db.Text
  postId   String
  post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId String
  author   User   @relation("UserPostComments", fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId])
  @@index([authorId])
}

enum TutorialType {
  VIDEO
  ARTICLE
}

enum TutorialCategory {
  ASTUCES
  DIY
  TECHNIQUES
}

model Tutorial {
  id          String           @id @default(cuid())
  title       String
  description String?          @db.Text
  type        TutorialType
  category    TutorialCategory

  videoUrl      String?
  videoDuration Int?
  thumbnail     String?

  content String?  @db.Text
  images  String[]

  authorId String
  author   User   @relation("UserTutorials", fields: [authorId], references: [id], onDelete: Cascade)

  likes     TutorialLike[]
  viewCount Int            @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([type])
  @@index([category])
  @@index([createdAt])
}

model TutorialLike {
  id         String   @id @default(cuid())
  tutorialId String
  tutorial   Tutorial @relation(fields: [tutorialId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation("UserTutorialLikes", fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([tutorialId, userId])
  @@index([tutorialId])
  @@index([userId])
}