generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email     String   @unique
  password  String
  name  String?
  createdAt DateTime @default(now())

  Token Token?
}

model Token {
  id String @id
  createdAt DateTime @default(now())
  expireAt DateTime

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Vegetable {
  id String @id @default(uuid())
  name String
  description String
  specifications String[]
  sowing String[]
  plantation String[]
  harvest String[]
  affinity String[]
  bad_neighbors String[]
}