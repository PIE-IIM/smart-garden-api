generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())

  Token           Token?
  gardenVegetable GardenVegetable[]

  // Relations forumÂ : correction ici
  forumTopics   ForumTopic[]   @relation("UserForumTopics")
  forumComments ForumComment[] @relation("UserForumComments")
}

model Token {
  id        String   @id
  createdAt DateTime @default(now())
  expireAt  DateTime

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Vegetable {
  id             String   @id @default(uuid())
  name           String
  description    String
  specifications String[]
  sowing         String[]
  plantation     String[]
  harvest        String[]
  affinity       String[]
  bad_neighbors  String[]

  gardenVegetable GardenVegetable[]
  VagetableImage  VegetableImage[]
}

model VegetableImage {
  id  String @id @default(uuid())
  url String

  vegetableId String    @unique
  vegetable   Vegetable @relation(fields: [vegetableId], references: [id])
}

model GardenVegetable {
  id          String    @id @default(uuid())
  vegetable   Vegetable @relation(fields: [vegetableId], references: [id])
  vegetableId String
  createdAt   DateTime  @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model ForumCategory {
  id          BigInt       @id @default(autoincrement())
  name        String       @unique
  description String?
  topics      ForumTopic[]
}

model ForumTopic {
  id         BigInt          @id @default(autoincrement())
  title      String
  userId     String
  categoryId BigInt
  solved     Boolean         @default(false)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime?
  user       User            @relation("UserForumTopics", fields: [userId], references: [id])
  category   ForumCategory   @relation(fields: [categoryId], references: [id])
  comments   ForumComment[]
  topicTags  ForumTopicTag[]
}

model ForumComment {
  id        BigInt     @id @default(autoincrement())
  topicId   BigInt
  userId    String
  content   String
  createdAt DateTime   @default(now())
  updatedAt DateTime?
  user      User       @relation("UserForumComments", fields: [userId], references: [id])
  topic     ForumTopic @relation(fields: [topicId], references: [id])
}

model ForumTag {
  id        BigInt          @id @default(autoincrement())
  name      String          @unique
  topicTags ForumTopicTag[]
}

model ForumTopicTag {
  topicId BigInt
  tagId   BigInt
  topic   ForumTopic @relation(fields: [topicId], references: [id])
  tag     ForumTag   @relation(fields: [tagId], references: [id])

  @@id([topicId, tagId])
}
